@* Views/Shared/_Modals.cshtml *@
<!-- Modal Unprocessed -->
<div class="modal fade" id="unprocessedModal" tabindex="-1" aria-labelledby="unprocessedModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="unprocessedModalLabel">Information on Unprocessed Alarms</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Here is some additional information about the oldest unprocessed alarms. You can view more details about how to address them.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

