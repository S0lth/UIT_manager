@using Microsoft.IdentityModel.Tokens
@model UITManagerWebServer.Controllers.AlarmSettingsController.NormGroupModel


@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
    var severities = ViewData["SeveritiesName"] as List<Severity>;
    var informations = ViewData["InformationsName"] as List<InformationName>;
    List<string> possibleCondition = new List<string>
    {
        ">", "<", "=", "!=", "IN", "NOT IN"
    };
    List<string> formats = new List<string>
    {
        "GB", "%", "TEXT"
    };
    int i = 0;
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Error"]
    </div>
}
<div class="container">
    <h1 class="">New Criteria</h1>
<div class="card shadow-sm border-0 rounded p-3">
    <div class="table-responsive">
        <form method="post" asp-action="Create">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-light">
                <tr>
                    <th>
                        Name
                        <button type="button" class="btn btn-link" data-bs-toggle="modal"
                                data-bs-target="#nameModal">
                            <i class="bi bi-info-circle"></i>
                        </button>
                    </th>
                    <th>
                        Max Expected Processing Time
