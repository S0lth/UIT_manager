@using UITManagerWebServer.Helpers
@model IEnumerable<UITManagerWebServer.Controllers.AlarmSettingsController.NormGroupPageViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="js/site.js"></script>

<div class="container-fluid px-4" style="max-width: 1700px;">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h1 class="h2 text-start fw-bold">Alarm</h1>
        <div class="d-flex gap-3 align-items-center">
            <div class="form-outline" data-mdb-input-init>
                <input type="search" id="Search" class="form-control" placeholder="Search..."/>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                New Alarm
            </a>
        </div>
    </div>


    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-light">
                            <tr>
                                <th class="@ViewHelpers.GetHeaderClass(ViewData["SortOrder"]?.ToString(), "AlarmGroup")">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["AlarmGroupSortParam"]"
                                       class="text-decoration-none text-dark">
                                        Alarm Name <i class="@ViewHelpers.GetSortIcon(ViewData["SortOrder"]?.ToString(), "AlarmGroup")"></i>
                                    </a>
                                </th>
                                <th class="@ViewHelpers.GetHeaderClass(ViewData["SortOrder"]?.ToString(), "Severity")">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["SeveritySortParam"]"
                                       class="text-decoration-none text-dark">
                                        Severity <i class="@ViewHelpers.GetSortIcon(ViewData["SortOrder"]?.ToString(), "Severity")"></i>
                                    </a>
                                </th>
                                <th class="@ViewHelpers.GetHeaderClass(ViewData["SortOrder"]?.ToString(), "Priority")">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PrioritySortParam"]"
                                       class="text-decoration-none text-dark">
                                        Priority <i class="@ViewHelpers.GetSortIcon(ViewData["SortOrder"]?.ToString(), "Priority")"></i>
                                    </a>
                                </th>
                                <th class="@ViewHelpers.GetHeaderClass(ViewData["SortOrder"]?.ToString(), "NbAlarm")">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NbAlarmSortParam"]"
                                       class="text-decoration-none text-dark">
                                        Number Alarm
                                        <i
                                            class="@ViewHelpers.GetSortIcon(ViewData["SortOrder"]?.ToString(), "NbAlarm")">
                                        </i>
                                    </a>
                                </th>
                                <th class="@ViewHelpers.GetHeaderClass(ViewData["SortOrder"]?.ToString(), "Enable")">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["EnableSortParam"]"
                                       class="text-decoration-none text-dark">
                                        Enable <i class="@ViewHelpers.GetSortIcon(ViewData["SortOrder"]?.ToString(), "Enable")"></i>
                                    </a>
                                </th>
                                <th>

                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in @Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="text-primary text-decoration-none">
                                            @item.NormGroupName
                                        </a>
                                    </td>
                                    <td class="@ViewHelpers.GetSeveryticolor(@item.Severity)">
                                        @item.Severity
                                    </td>
                                    <td class="text-secondary">
                                        @item.Priority
                                    </td>
                                    <td class="text-secondary">
                                        @item.TotalAlarms
                                    </td>
                                    <td>
                                        <form asp-action="ToggleIsEnable" asp-route-id="@item.Id" method="post">
                                            <input type="checkbox" name="isEnable" value="true"
                                                   @(item.IsEnable ? "checked" : "")
                                                   onchange="this.form.submit()"/>
                                        </form>
                                    </td>
                                    <td>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-link p-0 text-danger" title="Delete" style="border: none; background: none;" onclick="return confirm('Are you sure you want to delete this Alarm ?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>